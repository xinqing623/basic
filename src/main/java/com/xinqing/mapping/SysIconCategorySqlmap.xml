<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xinqing.mapping.SysIconCategoryMapper">
	<resultMap id="BaseResultMap" type="com.xinqing.entity.SysIconCategory">
		<result column="id" property="id" />
		<result column="category_name" property="categoryName" />
		<result column="create_time" property="createTime" />
	</resultMap>
	<sql id="Base_Column_List">
			id,
			category_name,
			create_time
	</sql>
	
	<select id="selectByPK" parameterType = "String" resultMap="BaseResultMap">
		select <include refid="Base_Column_List"></include>
		from sys_icon_category
		where id = #{id};
	</select>
	
	<select id="select" parameterType = "HashMap" resultMap="BaseResultMap">
		select <include refid="Base_Column_List"></include>
		from sys_icon_category
		where 1=1
		<if test="id != null">
			and id = #{id}
		</if>
		<if test="categoryName != null">
			and category_name = #{categoryName}
		</if>
		<if test="createTime != null">
			and create_time = #{createTime}
		</if>
	</select>
	
	<insert id="insert" parameterType="com.xinqing.entity.SysIconCategory">
           insert into sys_icon_category(<include refid="Base_Column_List"/>) 
               values(
					#{id},
					#{categoryName},
					#{createTime}
               )
	</insert>
	
	<update id="update" parameterType="com.xinqing.entity.SysIconCategory">
           update sys_icon_category
		   <set>
	           		<if test="id != null">
	           		id = #{id},
	           		</if>
	           		<if test="categoryName != null">
	           		category_name = #{categoryName},
	           		</if>
					<if test="createTime != null">
	           		create_time = #{createTime}
	           		</if>
		   </set>
           where id = #{id}
   </update>
	
	<delete id="delete" parameterType="String">
		delete from sys_icon_category where id = #{id};
	</delete>
	
</mapper>